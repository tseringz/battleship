{
    "root": true,
    "extends": ["airbnb", "prettier"],
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "no-unused-vars": "warn",
        "no-console": "off",
        "func-names": "off",
        "object-shorthand": "off",
        "class-methods-use-this": "off"
    },
    "env": {
        "jest": true,
        "browser": true
    },
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
}
